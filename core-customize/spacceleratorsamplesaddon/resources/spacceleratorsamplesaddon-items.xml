<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

	<itemtypes>
 		<typegroup name="Components">

		 	<!-- these types are not included in 1811 -->
			<itemtype code="CMSSiteContextComponent" autocreate="true"
				generate="true" extends="SimpleCMSComponent"
				jaloclass="de.hybris.platform.spacceleratorsamplesaddon.jalo.components.SiteContextSelectorComponent">
				<description>A component for site context selector</description>
				<attributes>
					<attribute qualifier="context" type="java.lang.String">
						<persistence type="property" />
						<modifiers />
						<description>site context: e.g. language or currency </description>
					</attribute>

				</attributes>
			</itemtype>
			
			<itemtype code="CMSFlexComponent" autocreate="true"
				generate="true" extends="SimpleCMSComponent"
				jaloclass="de.hybris.platform.spacceleratorsamplesaddon.jalo.components.FlexCmsComponent">
				<description>A component to replace JspIncludeComponent </description>
				<attributes>
					<attribute qualifier="flexType" type="java.lang.String">
						<persistence type="property" />
						<modifiers />
						<description>used to select the corresponding frontend codes</description>
					</attribute>

				</attributes>
			</itemtype>
		</typegroup>
	</itemtypes>
	


</items>
